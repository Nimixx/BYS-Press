{% extends "layouts/base.twig" %}

{% block content %}
  <main class="main-content">
    <h1>Hello</h1>

    {% if posts %}
      <div class="posts">
        {% for post in posts %}
          <article class="post">
            <h2>{{ post.title }}</h2>
            <div class="post-content">
              {{ post.content }}
            </div>
          </article>
        {% endfor %}
      </div>
    {% else %}
      <p>No posts found.</p>
    {% endif %}
  </main>
{% endblock %}
