{
  "name": "core-theme",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "bundle": "npm run build && ./scripts/bundle.sh",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:php": "composer test",
    "test:all": "npm run test:run && npm run test:php",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"./**/*.{ts,js,vue,css,php,twig,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"./**/*.{ts,js,vue,css,php,twig,json,md}\" --ignore-path .prettierignore",
    "format:ts": "prettier --write \"./**/*.ts\"",
    "format:vue": "prettier --write \"./**/*.vue\"",
    "format:php": "prettier --write \"./**/*.php\"",
    "format:twig": "prettier --write \"./**/*.twig\"",
    "check": "npm run lint && npm run format:check"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@kucrut/vite-for-wp": "^0.12.0",
    "@prettier/plugin-php": "^0.24.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/vue": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.0.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-twig-melody": "^0.4.6",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@vueuse/integrations": "^14.0.0",
    "focus-trap": "^7.6.6",
    "vue": "^3.5.22"
  }
}
