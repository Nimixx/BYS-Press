{
  "themeName": "core-theme",
  "version": "1.0.0",
  "exclude": [
    ".git",
    ".github",
    ".claude",
    "node_modules",
    "tests",
    "lib",
    "components",
    "layouts",
    "pages",
    "config",
    "styles",
    "composables",
    "scripts",
    "bundles",
    "docs",
    ".env",
    ".env.local",
    ".env.example",
    ".editorconfig",
    ".eslintignore",
    ".gitignore",
    ".prettierignore",
    ".prettierrc",
    "package.json",
    "package-lock.json",
    "composer.json",
    "composer.lock",
    "phpunit.xml",
    "tsconfig.json",
    "vite.config.js",
    "vitest.config.ts",
    "eslint.config.js",
    "bundle.config.json",
    "stats.html",
    "*.map",
    "*.md",
    "*.log"
