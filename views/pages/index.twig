{% extends "layouts/base.twig" %}

{% block content %}
  <div class="index-page">
    <h1>Blog</h1>

    {% if posts %}
      <div class="posts">
        {% for post in posts %}
          <article class="post">
            <h2 class="post__title">
              <a href="{{ post.link }}">{{ post.title }}</a>
            </h2>
            <div class="post__content">
              {{ post.content }}
            </div>
          </article>
        {% endfor %}
      </div>
    {% else %}
      <p>No posts found.</p>
    {% endif %}
  </div>
{% endblock %}
