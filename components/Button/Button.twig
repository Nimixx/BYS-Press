{#
  Button Component

  Reusable button component with multiple variants and sizes

  @param {string} text - Button text
  @param {string} url - Button URL (optional, creates anchor vs button)
  @param {string} variant - primary|secondary|outline|ghost (default: 'primary')
  @param {string} size - small|base|large (default: 'base')
  @param {boolean} full_width - Full width button (default: false)
  @param {boolean} disabled - Disabled state (default: false)
  @param {string} aria_label - Accessibility label (optional)
  @param {object} attributes - Additional HTML attributes (optional)
  @param {string} classes - CSS classes string (auto-generated by PHP helper)
#}

{% set tag = url ? 'a' : 'button' %}
{% set default_classes = classes | default('button') %}

<{{tag}} {% if url %} href="{{ url }}" {% endif %} class="{{ default_classes }}" {% if disabled %} disabled {% endif %} {% if aria_label %} aria-label="{{ aria_label }}" {% endif %} {% for attr, value in attributes %} {{ attr }}="{{ value }}" {% endfor %}>
	{{ text }}
</{{tag}}>
