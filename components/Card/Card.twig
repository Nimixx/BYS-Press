{#
  Card Component

  Reusable card component for displaying content

  @param {string} title - Card title
  @param {string} description - Card description
  @param {string} image - Image URL (optional)
  @param {string} url - Card link URL (optional)
  @param {string} cta_text - Call-to-action button text (default: 'Learn More')
  @param {string} variant - default|featured (default: 'default')
  @param {string} classes - CSS classes string (auto-generated by PHP helper)
#}

<article class="{{ classes | default('card') }}">
  {% if image %}
    <div class="card__image">
      <img src="{{ image }}" alt="{{ title }}" loading="lazy">
    </div>
  {% endif %}

  <div class="card__content">
    {% if title %}
      <h3 class="card__title">{{ title }}</h3>
    {% endif %}

    {% if description %}
      <p class="card__description">{{ description }}</p>
    {% endif %}

    {% if url and cta_text %}
      <div class="card__footer">
        {% include 'Button/Button.twig' with {
          text: cta_text,
          url: url,
          variant: 'outline',
          size: 'small'
        } %}
      </div>
    {% endif %}
  </div>
</article>
